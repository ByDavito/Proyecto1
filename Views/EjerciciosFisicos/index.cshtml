@{
  ViewData["Title"] = "Ejercicios";
}

<link rel="stylesheet" href="~/css/style-ejercicios.css">
<link rel="stylesheet" href="~/css/style-ejerciciosFisicos.css">

<h5 class="display-4 titulo centrar" style="text-shadow: 0 0 15px black;">Ejercicio Fisico</h5>


<div><button type="button" onclick="GetEjerciciosFisicos()" class="btn  btn-icono">
    <i class="bi bi-arrow-counterclockwise"></i>
  </button>
  <button type="button" class="btn  btn-icono" onclick="NuevoRegistro()" data-bs-toggle="modal" data-bs-target="#ModalTipoEjercicio">
    <i class="bi bi-plus-circle"></i>
  </button></div>

<div>
 <div class="mb-2 row background-element text-center" >
<div class=" col-xl-4 col-md-4 mb-2 centrar flex-column">
  <label for="fechaInicio" class="form-label titulo">Inicio</label>
<input type="date" id="fechaInicio" class="form-control input-transparent input-circulo" onchange="expanded(this), GetEjerciciosFisicos()"/>
</div>

<div class=" col-xl-4 col-md-4 mb-2 centrar flex-column">
<label for="fechaFin" class="form-label titulo">Inicio</label>
<input type="date" id="fechaFin" class="form-control input-transparent input-circulo" onchange="expanded(this), GetEjerciciosFisicos()"/>
</div>

<div class=" col-xl-4 col-md-4 mb-2 centrar flex-column text-center">
                <label for="TipoEjercicioBuscarID" class="form-label titulo">Tipo de Ejerciocio</label>
                @Html.DropDownList("TipoEjercicioBuscarID", null, htmlAttributes: new
                  {
                    @class = " form-control input-transparent ",
                    onchange="GetEjerciciosFisicos()"
                  })
                </div>
</div>




<table class="table mi-tabla">
  <thead >
    <tr>
      <th class="text-center align-middle"><div class="centrar"><p>Ejercicio</p></div></th>
      <th class="text-center align-middle"><div class="centrar"><p>Lugar</p></div></th>
      <th class="text-center align-middle";"><div class="centrar"><p>Inicio</p></div></th>
      <th class="text-center align-middle"><div class="centrar"><p>Fin</p></div></th>
      <th class="text-center align-middle"><div class="centrar"><p>Estado al <br>Empezar</p></div></th>
      <th class="text-center align-middle"><div class="centrar"><p>Estado al <br>Terminar</p></div></th>
      <th class="text-center align-middle"><div class="centrar"><p>Observaciones</p></div></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id="tbody-ejerciciosFisicos" >
  </tbody>
</table>

</div>



<!-- Modal -->

<div class="modal fade " id="ModalTipoEjercicio" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog ">
    <div class="modal-content mi-modal">
      <div class="modal-header">
        <h5 class="modal-title titulo" id="ModalTitulo"></h5>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <div class="row">
              <input type="hidden" id="EjercicioFisicoID" value="0">
              <div class="mb-3 col-md-12 centrar flex-column">
                <label for="IdEjercicio" class="form-label titulo">Tipo de Ejerciocio</label>
                @Html.DropDownList("IdEjercicio", null, htmlAttributes: new
                  {
                    @class = "select-transparent form-control input-transparent"
                  })
              </div>

              <div class="mb-3 col-md-12 centrar flex-column">
                <label for="IdEjercicio" class="form-label titulo">Lugar</label>
                @Html.DropDownList("LugarID", null, htmlAttributes: new
                  {
                    @class = "select-transparent form-control input-transparent"
                  })
              </div>

              <hr>

              <div class="mb-3 col-6 centrar flex-column">
                <label for="Inicio" class="form-label titulo">Inicio</label>
                <input type="datetime-local" id="Inicio" class="form-control input-transparent input-circulo" onchange="expanded(this)"/>
              </div>

              <div class="mb-3 col-6 centrar flex-column">
                <label for="EstadoInicio" style="margin-right: 2.5rem;" class="form-label titulo">Estado Emocional Inicio</label>
                @Html.DropDownList("EstadoInicio", null, htmlAttributes: new
                  {
                    @class = "form-control input-transparent"
                  })
              </div>

              <hr>

              <div class="mb-3 col-6 centrar flex-column">
                <label for="Fin" class="form-label titulo">Fin</label>
                <input type="datetime-local" id="Fin" class="form-control input-transparent input-circulo" onchange="expanded(this)"/>
              </div>

              <div class="mb-3 col-6 centrar flex-column">
                <label for="EstadoFin" style="margin-right: 2.5rem;" class="form-label titulo">Estado Emocional Fin</label>
                @Html.DropDownList("EstadoFin", null, htmlAttributes: new { @class = "form-control input-transparent" })
              </div>

              <hr>

              <div class="mb-3 col-12">
                <div class="mb-3 col-6 ce">
                  <label for="Observaciones" class="form-label titulo">Obserbaciones</label>
                  <textarea id="Observaciones" name="Observaciones" class="textarea-transparent"></textarea>
                </div>
              </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="LimpiarModal()" class="btn btn-secondary"
          data-bs-dismiss="modal">Cancelar</button>
        <button type="button" onclick="GuardarRegistro()" class="btn btn-primary test">Guardar</button>
      </div>
    </div>
  </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/ejerciciosfisicos.js"></script>