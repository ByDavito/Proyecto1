@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<h1 class="titulo text-center">@ViewData["Title"]</h1>
<div class="form-translucent">
    <div class="item-center ">
        <section class="item-center">
            <form id="account" method="post" class="">
                <h2 class="titulo text-center">Usa tu cuenta para loguearte.</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 ">
                    <input asp-for="Input.Email" class="form-control input-transparent titulo" autocomplete="username" aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Email" class="form-label text-shadow">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control input-transparent titulo" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password" class="form-label text-shadow">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 test btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword"> haz olvidado tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Resgistrate</a>
                    </p>
                 
                </div>
            </form>
        </section>
    </div>
</div>
